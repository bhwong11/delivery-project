<div class="signup-body">
  <h2 class="signup-header">Sign Up</h2>
  
  <div class="progress-container">
    <div class="progress-one"></div>
    <img class="truck" src="/images/truck.png" alt="">
  </div>
  <form class="signup-container" method="POST" action="/signup1">
      <label class="signform-label" for="name">What is your name?</label>
      <input class="signup-input" type="text" name="name" id="name">
  
